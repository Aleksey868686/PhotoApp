<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label x:Name="EnterPinCode"  Text = "Введите PIN" FontSize ="20" Margin="20,0,0,0"/>
            <Entry x:Name = "EnteredPin"  Text = "" IsPassword="True" BackgroundColor="LightGrey" HorizontalTextAlignment="Center"  />
            <Button x:Name = "PinButton"
                Text = "Enter"
                Clicked = "OnEnterPinAsync"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
